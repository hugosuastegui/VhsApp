<h1>Create a new Project</h1>

<%= form_for(@project) do |f| %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :category %>
      <%= f.text_field :category %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :end_date %>
      <%= f.text_area :end_date %>
    </div>

    <div class="field">
      <%= f.label :client %>
      <%= f.text_field :client %>
    </div>

    <div class="field">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>

    <div class="field">
      <%= f.label :revenue %>
      <%= f.text_field :revenue %>
    </div>

    <div class="field">
      <%= f.label :volume %>
      <%= f.text_field :volume %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>