<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Creation</th>
      <th>Client</th>
      <th>Description</th>
      <th>Volume</th>
      <th>Revenue</th>
      <th>Marginal Contribution</th>
      <th>Status</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
</thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.title, project_path(project) %></td>
        <td><%= distance_of_time_in_words(project.created_at, Time.now) %></td>
        <td><%= project.client %></td>
        <td><%= project.description %></td>
        <td><%= project.volume %></td>
        <td>Revenue</td>
        <td>Marginal Contribution</td>
        <td><%= link_to project.status.capitalize, toggle_status_project_path(project) %></td>
        <td><%= link_to "E", edit_project_path(project) %></td>
        <td><%= link_to "D", project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>  
      </tr>
    <% end %>
  </tbody>
</table>
